<!-- signup-page -->
<section id="main" class="clearfix user-page" style="background-image: url(<%= image_path('bg.png') %>)">
  <div class="container">
    <div class="row text-center">
    <h2 style="color: #fff;
    font-weight: 400;
    margin-bottom: 55px;">Register</h2>
      <!-- user-login -->     
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="user-account">

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.text_field :first_name, class: "form-control", autofocus: true, autocomplete: "off", placeholder: "First Name" %>
            </div>

            <div class="form-group">
              <%= f.text_field :last_name, class: "form-control", autocomplete: "off", placeholder: "Last Name" %>
            </div>

            <div class="form-group">
              <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
            </div>


            <div class="form-group">
              <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Password" %>
            </div>

            <div class="form-group">
              <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off", placeholder: "Password again" %>
            </div>
            



          



                  
        </div>
      </div><!-- user-login -->   




<div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

            <div class="checkbox">
             <p class="terms-accept">By registering you confirm 
              you agree to the <%= link_to "rules", rules_path, target: "_blank" %> and <%= link_to "terms and conditions", terms_path, target: "_blank" %>.</p>
            </div>






                        <button type="submit" class="btn-sign m-t-3">Create account!</button>  
                        <%= link_to "Already registered? Sign in!", new_user_session_path, class: "btn-reg m-t-3" %>


</div>




    </div><!-- row -->  
  </div><!-- container -->
</section><!-- signup-page -->
<% end %>