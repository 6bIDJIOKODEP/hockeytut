

<!-- signin-page -->
<section id="main" class="clearfix user-page" style="background-image: url(<%= image_path('bg.png') %>)">
  <div class="container">
    <div class="row text-center">
        <h2 style="color: #fff;
    font-weight: 400;
    margin-bottom: 55px;">Forgot password?</h2>
      <!-- user-login -->     
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="user-account">
          <!-- form -->
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="form-group">
              <%= devise_error_messages! %>
              <%= f.email_field :email, autofocus: true, class: "form-control", id: "pizdec1", placeholder: "Email" %>
            </div>

          
          
        </div>


      </div><!-- user-login -->  


        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">





        <button type="submit" class="btn-sign m-t-3">Restore password!</button>



       <% end %>




        </div>




    </div><!-- row -->  
  </div><!-- container -->
</section><!-- signin-page -->
