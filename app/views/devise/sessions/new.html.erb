<!-- signin-page -->
<section id="main" class="clearfix user-page" style="background-image: url(<%= image_path('bg.png') %>)">
  <div class="container">
    <div class="row text-center">
        <h2 style="color: #fff;
    font-weight: 300 !important;
    margin-bottom: 35px;">Sign in</h2>
      <!-- user-login -->     
      <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
        <div class="user-account">
          <!-- form -->
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, class: "form-control", id: "pizdec1", placeholder: "Email" %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "off", class: "form-control", id: "pizdec2", placeholder: "Password" %>
            </div>

          
          
        </div>


      </div><!-- user-login -->  


        <div class="col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">


          <!-- forgot-password -->
          <div class="user-option">
            <div class="text-center forgot-password">
              <%= link_to "Forgot password?", new_user_password_path %>
            </div>
          </div><!-- forgot-password -->



        <button type="submit" class="btn-sign m-t-3">Login</button>



        <% end %>





        <%= link_to "Register!", new_user_registration_path, class: "btn-reg m-t-3" %>

        </div>




    </div><!-- row -->  
  </div><!-- container -->
</section><!-- signin-page -->


