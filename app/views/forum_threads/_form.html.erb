<!-- form -->
<%= form_for ([@forum_thread.forum, @forum_thread]) do |f| %>
  <div class="form-group">
    <%= f.text_field :subject, autofocus: true, class: "form-control", placeholder: "Subject" %>
  </div>
  <div class="form-group">
    <%= f.text_area :main_discussion_text, rows: 10, class: "form-control", placeholder: "Short description.." %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <button type="submit" class="btn btn-primary float-right">Submit!</button>

<% end %>




