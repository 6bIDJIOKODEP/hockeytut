<!-- ad-profile-page -->
<section id="main" class="clearfix  ad-profile-page">
  <div class="container">
  
    <div class="breadcrumb-section">          
      <h2 class="title">My Profile</h2>
    </div><!-- banner -->
    
    <div class="ad-profile section">  
      <div class="user-profile">
        <div class="user-images">
          <%= image_tag('user.png') %>
        </div>
        <div class="user">
          <h2>Hello, <%= current_user.first_name %></h2>
          <h5>You last logged in at: <%= current_user.last_sign_in_at %></h5>
        </div>

             
      </div><!-- user-profile -->
          
      <ul class="user-menu">
        <li><%= link_to "My profile", edit_user_registration_path %></li>
        <li><%= link_to "My ads", my_ads_path %></li>
        <li class="active"><%= link_to "Close account", close_account_path %></li>
      </ul>
    </div><!-- ad-profile --> 




      <div class="close-account">
        <div class="row">
          <div class="col-sm-12 text-center">
            <div class="delete-account section">
              <h2>Delete Account</h2>
              <h4>Please notice, this action is irreversible.</h4>
              <%= button_to "Cancel my account", user_registration_path, data: { confirm: "Are you sure?" }, method: :delete, class: "btn" %>
            </div>
          </div><!-- delete-account -->      
        </div><!-- row -->
      </div>









  </div><!-- container -->
</section><!-- ad-profile-page -->