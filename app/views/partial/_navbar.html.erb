<header id="header" class="clearfix">
		<!-- navbar -->
		<nav class="navbar navbar-default">
			<div class="container">
				<!-- navbar-header -->
				<div class="navbar-header">
					<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
					<span class="sr-only">Toggle navigation</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					</button>

					<%= link_to root_path, class: "navbar-brand" do %>
						<%= image_tag(('logo.png'), class: "img-responsive") %>
					<% end %>
					
				</div>
				<!-- /navbar-header -->
				
				<div class="navbar-left">
					<div class="collapse navbar-collapse" id="navbar-collapse">
						<ul class="nav navbar-nav">
							<li><%= link_to "Home", root_path %></li> 
							<li><%= link_to "Tournaments", search_path %></li>
							<li><%= link_to "Camps", search_camp_path %></li>
							<li><%= link_to "Ads", ads_path %></li>
							<li><%= link_to "Forum", forums_path %></li>
						</ul>
					</div>
				</div>
				
				<!-- nav-right -->
				<div class="nav-right">
					<!-- language-dropdown -->
					<div class="dropdown language-dropdown">
						<%= image_tag('flag-usa.jpg') %> 						
						<a data-toggle="dropdown" href="#"><span class="change-text">English</span> <i class="fa fa-angle-down"></i></a>
						<ul class="dropdown-menu language-change">
							<li><%= image_tag('flag-rus.jpg') %><a href="#">Русский</a></li>
							<li><%= image_tag('flag-usa.jpg') %><a href="#">English</a></li>
						</ul>								
					</div><!-- language-dropdown -->

					<% if !user_signed_in? %>
					<!-- sign-in -->					
						<ul class="sign-in">
							<li><%= image_tag('person.png') %><%= link_to 'Sign In or Register', new_user_session_path %></li>
						</ul>
					<!-- sign-in -->							
					<% else %>
						<div class="dropdown language-dropdown">
							<ul class="sign-in">
							<li><%= image_tag('person.png') %></li>
							</ul> 						
							<a data-toggle="dropdown" href="#"><span class="change-text"><%= current_user.first_name %>!</span> <i class="fa fa-angle-down"></i></a>
							<ul class="dropdown-menu language-change">
								<li><%= link_to "My profile", edit_user_registration_path %></li>
								<li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
							</ul>								
						</div>		
					<% end %>
									
					<%= link_to 'Post ad', new_tournament_path, class: "myButton " %>
				</div>
				<!-- nav-right -->
			</div><!-- container -->
		</nav><!-- navbar -->
	</header><!-- header -->