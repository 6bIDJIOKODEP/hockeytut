  <%= form_for([@tournament, @tournament.reviews.new]) do |f| %>
      <div class="reviews" id="user_stars"></div>
      <%= f.text_area :comment, placeholder: "Your review here..", rows: 5, class: "form-control margin-01" %>
      <%= f.hidden_field :tournament_id, value: @tournament.id %>
      <%= f.submit "Submit review", class: "btn float-right" %>
  <% end %>

<script>
	$('#user_stars').raty({
		path: '/assets',
		scoreName: 'review[star]',
		score: 1
	});
</script>